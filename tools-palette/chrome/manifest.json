{   
  "name": "Twitter/Brizzly Tools Palette by @paul_shinn",
  "version": "1.0.0.1",
  "description": "A script that adds extra filter/cleanup and embedding features to Twitter and Brizzly.",
  "permissions": ["http://twitter.com/*", "https://twitter.com/*", "http://brizzly.com/*", "https://brizzly.com/*"],
  "content_scripts": [{
      "matches": ["http://twitter.com/*", "https://twitter.com/*", "http://brizzly.com/*", "https://brizzly.com/*"],
      "js": ["jquery.min.js", "toggle-palette.user.js"],
      "run_at": "document_idle"
    }]
}